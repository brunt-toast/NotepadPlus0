<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notepad_0.MainPage">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="Save" />
            <MenuFlyoutItem Text="Save as" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="Exit" />
        </MenuBarItem>

        <MenuBarItem Text="Edit">
            <MenuFlyoutItem Text="Undo" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="Cut" />
            <MenuFlyoutItem Text="Copy" />
            <MenuFlyoutItem Text="Paste" />
            <MenuFlyoutItem Text="Delete" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="Find" />
            <MenuFlyoutItem Text="Find next" />
            <MenuFlyoutItem Text="Find previous" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="Select all" />
        </MenuBarItem>

        <MenuBarItem Text="View">
            <MenuFlyoutItem Text="Zoom in" />
            <MenuFlyoutItem Text="Zoom out" />
            <MenuFlyoutItem Text="Restore default zoom" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <Editor HorizontalTextAlignment="Start" VerticalTextAlignment="Start" IsSpellCheckEnabled="False" />

</ContentPage>
